#include <stdio.h>
int main()
{
    int i, j, rows;
    printf("Enter number of rows: ");
    scanf("%d", &rows);
    for(i=1; i<=(rows * 2 - 1); i++)
    {
        if(i == rows)
        {
            for(j=1; j<=(rows * 2 - 1); j++)
            {
                printf("+");
            }
        }
        else
        {
            for(j=1; j<=rows-1; j++)
            {
                printf(" ");
            }
            printf("+");
        }

        printf("\n");
    }

    return 0;
}
